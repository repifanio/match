{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug NestJS Clean",
      "runtimeExecutable": "node",
      "runtimeArgs": [
        "--inspect-brk",
        "-r",
        "ts-node/register",
        "-r",
        "tsconfig-paths/register",
        "src/main.ts"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "sourceMaps": true,
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}